{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "jsx": "react",
    "outDir": "./dist", // Specify the output directory
    "rootDir": "./src"  // Specify the root directory
  },
  "include": ["src", "types"]
}